extends layout.pug

block content
  main
    section.search-page
      .search-page__wrapper
        h1 Поиск
        .search.search-page__form
          form(action='#' method='get')
            label
              input(type='text' name='search' placeholder='Что ищем?')
            button.search__button.button.button--transparent(type='submit') Найти
          - var isArticle = result
          if isArticle
            each article of results
              .search__result
                time.search__date(datetime='') #{article.createdDate}
                a.search__link
                  | #{article.title}
